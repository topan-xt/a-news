<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spaceLarge"
    android:paddingBottom="@dimen/spaceLarge"
    android:layout_marginBottom="@dimen/spaceDivider">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/spaceExtraLarge"
        android:layout_marginRight="@dimen/spaceExtraLarge"
        android:orientation="vertical"
        android:padding="@dimen/spaceMedium"
        android:id="@+id/card_sources">


        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spaceSmallest"
            android:textColor="@color/colorDarkGrey"
            android:textSize="@dimen/textSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_news_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_marginTop="@dimen/spaceMedium"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textExtraLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spaceSmallest"
            android:layout_marginBottom="@dimen/spaceSmall"
            android:paddingTop="@dimen/spaceSmall"
            android:paddingBottom="@dimen/spaceSmall">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spaceExtraLarge"
                android:drawableLeft="@drawable/ic_touch"
                android:gravity="center_vertical"
                android:text="@string/button_find_article"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/textSmall" />

            <TextView
                android:id="@+id/tv_news_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spaceExtraLarge"
                android:drawableLeft="@drawable/ic_country"
                android:gravity="center_vertical"
                android:textSize="@dimen/textSmall" />

            <TextView
                android:id="@+id/tv_news_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_hearing"
                android:gravity="center_vertical"
                android:textSize="@dimen/textSmall" />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>